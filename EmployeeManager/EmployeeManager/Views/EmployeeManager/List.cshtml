@model List<Employee>

    <h2>List of Employees</h2>
<h2 class="message">@TempData["Message"]</h2>

<a asp-controller="EmployeeManager" asp-action="Insert" class="linkbutton">Insert</a>
<table border="1">
    <tr>
    <th>Employee ID</th>
    <th>First Name</th>
    <th>Last Name</th>
    <th>Title</th>
        <th>Country</th>
        <th colspan="2">Actions</th>

    </tr>
    @foreach (Employee employee in Model)
    {
<tr>
    <td>@employee.EmployeeID</td>
    <td>@employee.FirstName</td>
    <td>@employee.LastName</td>
    <td>@employee.Title</td>
    <td>@employee.Country</td>
    <td>
        <a asp-controller="EmployeeManager" asp-action="Update" asp-route-id="@employee.EmployeeID" class="linkbutton">Update</a>
    </td>
    <td>
        <a asp-controller="EmployeeManager" asp-action="Delete" asp-route-id="@employee.EmployeeID" class="linkbutton">Delete</a>
    </td>
</tr>
    }
</table>